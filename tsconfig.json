{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "outDir": "dist",
    "target": "ES2018",
    "module": "commonjs",
    "types": [
      "node",
      "@types/jest"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}